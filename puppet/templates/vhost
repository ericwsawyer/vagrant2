<VirtualHost *:80>
	ServerAdmin admin@twine

	DocumentRoot /var/www/
	
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	
	<Directory /var/www/>
		EnableSendfile Off
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>

        Alias /static/ /var/www/formhub/main/static/
        <Directory /var/www/formhub/main/static>
            AllowOverride All
            Order allow,deny
            Allow from all
        </Directory>
        WSGIScriptAlias / /var/www/formhub/formhub.wsgi

	ErrorLog /var/log/apache2/error.log
	LogLevel warn
	CustomLog /var/log/apache2/access.log combined
</VirtualHost>
